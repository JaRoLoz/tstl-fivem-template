{
    "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "typeRoots": ["../node_modules/@typescript-to-lua"],
        "types": ["language-extensions"],
        "moduleResolution": "Node",
        "strict": true,
        "rootDir": ".",
        "outDir": "../build/client"
    },
    "exclude": ["../node_modules", "../shared"],
    "tstl": {
        "luaTarget": "5.4",
        "noImplicitSelf": true,
        "noHeader": true
    }
}
